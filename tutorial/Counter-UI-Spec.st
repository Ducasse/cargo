ComposableModel subclass: #CounterUI	instanceVariableNames: 'counterLabel incButton decButton counter'	classVariableNames: ''	poolDictionaries: ''	category: 'Counter-UI-Spec'!!CounterUI commentStamp: 'ChristopheDemarey 11/25/2016 16:14' prior: 0!I'm a basic UI to interact with a counter object.Open me with:	self new openWithSpec!!CounterUI methodsFor: 'actions' stamp: 'ChristopheDemarey 11/25/2016 16:30'!refresh	counterLabel label: counter value asString! !!CounterUI methodsFor: 'initialization' stamp: 'ChristopheDemarey 11/25/2016 16:28'!initialize	super initialize.	counter := Counter new! !!CounterUI methodsFor: 'initialization' stamp: 'ChristopheDemarey 11/25/2016 16:29'!initializePresenter	"Initialize widgets behavior"	incButton action: [ counter increment. self refresh ].	decButton action: [ counter decrement. self refresh ].! !!CounterUI methodsFor: 'initialization' stamp: 'ChristopheDemarey 12/1/2016 16:17'!initializeWidgets	incButton := self newButton		label: nil;		icon: (self iconNamed: #add);		yourself.	decButton := self newButton		label: nil;		icon: (self iconNamed: #windowMinimize);		yourself.	counterLabel := self newLabel.		self focusOrder		add: decButton;		add: incButton.			self whenBuiltDo: [ self refresh ]! !!CounterUI methodsFor: 'api' stamp: 'ChristopheDemarey 12/1/2016 16:18'!initialExtent	 ^  (300.0@70.0)! !!CounterUI methodsFor: 'accessing' stamp: 'ChristopheDemarey 11/25/2016 16:14'!counterLabel	^ counterLabel! !!CounterUI methodsFor: 'accessing' stamp: 'ChristopheDemarey 11/25/2016 16:15'!incButton	^ incButton! !!CounterUI methodsFor: 'accessing' stamp: 'ChristopheDemarey 11/25/2016 16:15'!decButton	^ decButton! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!CounterUI class	instanceVariableNames: ''!!CounterUI class methodsFor: 'specs' stamp: 'ChristopheDemarey 11/25/2016 16:21'!title	^ 'Spec Counter'! !!CounterUI class methodsFor: 'specs' stamp: 'ChristopheDemarey 11/25/2016 16:33'!defaultSpec	^ SpecLayout composed		newColumn: [ :column |			column 				add: #counterLabel;				newRow: [ :row |					row						add: #decButton;						add: #incButton ] height: 25;				yourself ];		yourself! !